{
  "compilerOptions": {
    "outDir": "dist", // 输出的目录
    "sourceMap": true,  // 采用 sourcemap
    "target": "es2016", // 目标语法
    "module": "esnext", // 模块格式
    "moduleResolution": "node", // 解析模块的方式
    "strict": false,  // 严格模式
    "resolveJsonModule": true,  // 解析json模块
    "esModuleInterop": true,  // 允许通过es6语法引入 commonjs 模块
    "jsx": "preserve",  // jsx 不转义
    "lib": ["esnext", "dom"],  // 支持的类库：esnext和dom
    "baseUrl": ".",
    "paths": {
      "@vue/*": ["packages/*/src"]
    }
  }
}
